<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主要业务"
            android:textColor="#3087ea"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:src="@mipmap/common_nav_message_black_n" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_20"
        android:id="@+id/zixun"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/inquiry_bg">

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_toLeftOf="@+id/img_text"
           />

        <ImageView
            android:id="@+id/img_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_5"
            android:src="@mipmap/doctor"

            />

        <TextView
            android:id="@+id/tv_homepage_inquiry"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@mipmap/tip_box"
            android:text="问诊"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_20"
        android:id="@+id/wenzhen"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/promise_bg">

        <TextView
            android:id="@+id/tv_homepage_question"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@mipmap/tip_box"
            android:text="答疑"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        android:text="个人信息"
        android:textColor="#3087ea"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:layout_width="@dimen/dp_320"
        android:id="@+id/wode"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/my_information_bg">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_people"
            android:layout_width="@dimen/dp_105"
            app:roundedCornerRadius="@dimen/dp_8"
            android:layout_height="@dimen/dp_130"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_toRightOf="@+id/image_people"
            android:orientation="vertical">

            <TextView
                android:id="@+id/people_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/people_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="XXX"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/people_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="XXX"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/people_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="XXX"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_homepage_manage"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@mipmap/tip_box"
            android:text="管理"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</LinearLayout>
