<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.BIndBankActivity">
    <LinearLayout
        android:id="@+id/idCard_layout_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_50"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_4"
            android:background="#3087ea" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8">

            <ImageView
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_160"
            />

            <TextView
                android:id="@+id/bind_id_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="绑定身份证》"
                android:textColor="#3087ea"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bank_layout_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="银行卡"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_4"
            android:background="#3087ea" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8">

            <ImageView
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_160"
             />

            <TextView
                android:id="@+id/bind_bank_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="绑定银行卡》"
                android:textColor="#3087ea"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/idCard_layout_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"

        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/id_card"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_4"
            android:background="#3087ea" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8">

            <ImageView
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_160"
               />

            <TextView
                android:id="@+id/cord_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/sp_18"
                android:text="李四"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/cord_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cord_name"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_18"
                android:text="女"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/cord_zu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cord_name"
                android:layout_marginLeft="@dimen/dp_55"
                android:layout_marginTop="@dimen/dp_18"
                android:text="回族"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/cord_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cord_sex"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:text="411326199809274814"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bank_layout_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bank_card_n"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="银行卡"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_4"
            android:background="#3087ea" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8">

            <ImageView
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_160"
          />

            <TextView
                android:id="@+id/cord_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_32"
                android:text="中国工商银行"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/cord_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cord_address"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:text="信用卡"

                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/cord_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cord_type"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_37"
                android:text="411326199809274814"

                android:textSize="@dimen/sp_18" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>