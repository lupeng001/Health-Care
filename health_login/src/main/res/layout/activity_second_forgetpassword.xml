<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context=".activity.SecondForgetpassword">
    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="@mipmap/common_icon_back_white_n"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置新密码"
        android:textSize="@dimen/sp_16"
        android:textColor="#fff"
        />


    <RelativeLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_165"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_170"
        android:background="@drawable/shapes2"
        ></RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_173"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_170"
        android:background="@drawable/shapes3"
        ></RelativeLayout>
    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="158dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_170"
        android:background="@drawable/shapes">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:hint="请设置新密码"
            android:layout_marginTop="@dimen/dp_30"
            android:id="@+id/forget_pwd"
            />
        <ImageView
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/dp_16"
        android:id="@+id/forget_eye"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_25"

        android:background="@drawable/eye_selector"
        />

        <!--<ImageView-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_width="@dimen/dp_16"-->
        <!--android:id="@+id/forget_eye"-->
        <!--android:layout_height="@dimen/dp_16"-->
        <!--android:layout_marginTop="@dimen/dp_35"-->
        <!--android:layout_marginRight="@dimen/dp_25"-->

        <!--android:background="@drawable/eye_selector"-->
        <!--/>-->

        <EditText
            android:hint="请确认密码"
            android:layout_alignParentBottom="true"
            android:id="@+id/forget_pwds"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            />
        <ImageView
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/dp_16"
        android:id="@+id/forget_eyes"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_85"
        android:layout_marginRight="@dimen/dp_25"

        android:background="@drawable/eye_selector"
        />
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:id="@+id/forget_commit"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/button_wancheng"
        android:layout_alignParentBottom="true"
        android:text="完成"
        android:textColor="#3087ea"
        android:layout_marginBottom="@dimen/dp_30"
        />
</RelativeLayout>